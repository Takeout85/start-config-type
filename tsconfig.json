{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*":  ["./src/components/*"],
      "@containers/*":  ["./src/containers/*"],
      "@pages/*":       ["./src/pages/*"],
      "@routes/*":      ["./src/routes/*"],
      "@styles/*":      ["./src/styles/*"],
      "@hooks/*":       ["./src/hooks/*"],
      "@icons/*":       ["./src/assets/icons/*"],
      "@logos/*":       ["./src/assets/logos/*"],
      "@elements/*":    ["./src/elements/*"],
      "@utils/*":       ["./src/utils/*"],
      "@context/*":     ["./src/context/*"],
    }
  }
}